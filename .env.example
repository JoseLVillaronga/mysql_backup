# .env.example
# Archivo de configuración de ejemplo para el sistema de backup
# Copia este archivo a .env y completa con tus credenciales reales

# Credenciales MySQL
MYSQL_USER="usuario_mysql"
MYSQL_PASS="tu_contraseña_mysql_segura"
MYSQL_HOST="127.0.0.1"

# Credenciales MongoDB
USUARIO="admin"
CONTRASENA="tu_contraseña_mongo_segura"
HOST="127.0.0.1"
PUERTO="27017"
DESTINO="/mnt/backup/mongo"
AUTH_DB="admin"

# Formato de la fecha (se usará dentro del script)
FECHA_FORMAT="%Y-%m-%d_%H-%M"

# Directorio de destino para backups MySQL
DIR_DESTINO="/mnt/backup/mysql"

# Directorio para backups incrementales (referencia PITR)
DIR_DESTINO_INC="/mnt/backup/mysql/incremental"

# Directorio para respaldo de binlogs rotados
BINLOG_BACKUP_DIR="/mnt/backup/mysql/binlogs"

# Hora de inicio para listar binlogs en PITR (solo día actual)
HORA_INICIO="07:00:00"